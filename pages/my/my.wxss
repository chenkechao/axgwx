.bag{
  background: url('https://zhipai.oss-cn-shenzhen.aliyuncs.com/20190122/20190122175143FCD7.png');
  width: 750rpx;
  height: 350rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.head-img{
  width:145rpx;
  height:145rpx;
  border-radius:50%;
}
.user-name{
  width:150rpx;
  height:36rpx;
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:36rpx;  
  text-align: center;
  margin-top:20rpx;
}
.content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:center;
  width:690rpx;
  padding:20rpx 30rpx;
  line-height: 60rpx;
  border-bottom: 8rpx solid #F1F1F1;
}
.flex-column{
  position: relative;
  justify-content: center;
  align-items: center;
  font-size:26rpx;
  margin:0 40rpx;
}
.content-tilte{
  display:flex;
  align-items:center;
  color:rgba(0,0,0,1);

  font-family:SourceHanSansCN-Regular;
  font-size:28rpx;
  font-weight:600;
}
.content-tilte-msg{
  font-weight:400;
  color:rgba(153,153,153,1); 
  font-family:SourceHanSansCN-Regular;
  font-size:28rpx; 
}
.img-icon{
  width:60rpx;
  height: 60rpx; 
}
