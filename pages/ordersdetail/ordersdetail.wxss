.order{
  display: flex;
  flex-direction: column;
  width: 710rpx;
  padding: 20rpx;
  background:#FFF;
  border-bottom: 10rpx solid #F1F1F1;
}
.order-data{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}
.order-data-one{
  font-size:24rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:44rpx;  
}
.order-statu{
  font-size:30rpx;
  font-weight:400;
  color:rgba(226,44,71,1);
  line-height:37rpx;  
}
.order-msg{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #F7F7F7;
  border-bottom:10rpx solid #FFF;
}
.order-pic{
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}
.order-title{
  max-width: 360rpx;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.order-pri{
  max-width: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:#000000;
  line-height:40rpx;  
  text-align: right;
  margin-right: 10rpx;
}
.order-price{
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:70rpx;
  text-align:right;
}
.order-btn{
  display: flex;
  flex-direction: row-reverse;
  height:70rpx;
  line-height:70rpx;
  padding-top:20rpx;
}
.cancel-btn{
  text-align: center;
  height:60rpx;
  font-size:30rpx;
  line-height: 60rpx;
  color: #999999;
  border: 1rpx solid rgba(191,191,191,1);
  border-radius:10rpx;
  padding:0 20rpx;
}
.msg-btn{
  text-align: center;
  height:60rpx;
  font-size:30rpx;
  line-height: 60rpx;
  color: #E22C47;
  border: 1rpx solid #E22C47;
  border-radius:10rpx;
  padding:0 30rpx;  
  margin-left:30rpx;
}
.pay-btn{
  text-align: center;
  height:60rpx;
  font-size:30rpx;
  line-height: 60rpx;
  color: #FFFFFF;
  background: #E22C47;
  border-radius:10rpx;
  padding:0 30rpx;  
  margin-left:30rpx;
}
