.flex-row{
  align-items: center;
}
.swiperBox{
  width:750rpx;
  height:350rpx;
}
.bannerimg{
  width:750rpx;
  height:350rpx;
}
.red-img{
  width: 70rpx;
  height: 70rpx;
}
.numipt{
  width: 110rpx;
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #E22C47;
  background-color: #E4E4E4;
  font-size:50rpx;
}
.activitylist{
  width: 710rpx;
  height: auto;
  padding:20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 8rpx solid #F1F1F1;
}
.activity-title{
  width:710rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(226,44,71,1);
  line-height:36rpx;
  border-bottom: 1rpx solid #E5E5E5;
  padding:20rpx 20rpx;
}
.activity-introduce{
  width:100%;
  font-size:30rpx;
  font-weight:550;
  color:rgba(0,0,0,1);
  margin:10rpx 0;
}
.activity-time{
  width:100%;
  font-size:26rpx;
  color:rgba(102,102,102,1);
  margin:10rpx 0;
}
.activity-imglist{
  display: felx;
  flex-flow: row wrap;
  margin-top:10rpx;
}
.activity-img{
  width: 210rpx;
  height: 210rpx;
  border-radius:10rpx;
  margin: 0 20rpx 20rpx 0;
}
.product-details{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}
.product-parameter{
  width: 236rpx;
  font-size:30rpx;
  font-weight:550;
  color:rgba(0,0,0,1);
}
.product-price{
  width: 236rpx;
  font-size:36rpx;
  font-weight:400;
  color:#E22C47;
}
.product-statu{
  width: 236rpx;
  text-align: right;
  font-size:30rpx;
  font-weight:550;
  color:#666666;  
}
.product-num{
  width: 100rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #E22C47;
  background-color: #E4E4E4;
}
.buycheckbox{
  position:fixed;
  bottom:0rpx;
  left: 0rpx;
  width: 750rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  border-top: 1rpx solid #eeeeee;
  z-index:999;
}
.toindex{
  height: 120rpx;
  width: 214rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:24rpx;
  font-weight:400;
  color:rgba(226,44,71,1);
}
.index-img{
  width: 60rpx;
  height:60rpx;
}
.buy-num{
  height: 120rpx;
  width: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-weight:400;
  color:rgba(226,44,71,1);  
  background-color: #FEDCE1;
}
.buy-btn{
  height: 120rpx;
  width: 288rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-weight:400;
  color:#FFFFFF;  
  background-color: #E22C47;  
}