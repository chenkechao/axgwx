/* pages/submitorders/submitorders.wxss */
@import "../template/globalSearch/globalSearch.wxss";
.searchBox{
  position: relative;
  width: 750rpx;
  height: 88rpx;
  display: flex;
  align-items:center;
  background-color: #FFF;
}

.searchBg{
  margin:0 30rpx;
  /* width: 580rpx; */
  width: 710rpx;
  height: 60rpx;
  background-color: #F1F1F1;
  border: 0;
  border-radius: 30rpx;
}
.orders-tip{
  width:710rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(226,44,71,1);
  padding: 20rpx;
}
.adress{
  width:710rpx;
  padding: 20rpx;
  justify-content: space-between;
  border-bottom:8rpx solid #F1F1F1;
}
.ad-icon{
  width: 80rpx;
  height: 80rpx;
  margin:10rpx;
}
.ad-txt{
  width: 500rpx;  
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:50rpx;  
}
.ad-txt1{
  width: 160rpx;  
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:50rpx;  
}
.ad-ipt{
  width: 340rpx;  
  font-size: 30rpx;
  border-bottom:1rpx solid rgba(125,125,125,1);
  /* border-radius:10rpx; */
  -web-kit-appearance:none;
  -moz-appearance: none;
}
.adress-edit{
  width:90rpx;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  margin:20rpx 0rpx;
}
.product-title{
  font-size: 30rpx;
  height:80rpx;
  line-height:40rpx;
  width:400rpx;
  margin-left:10rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.product-spe{
  font-size: 24rpx;
  line-height: 60rpx;
  color: #666666;
  width:400rpx;
  margin-left:10rpx;
}
.product-price{
  font-size:40rpx;
  font-weight:400;
  color:rgba(226,44,71,1);
  line-height:40rpx; 
  text-align:right;
}
.product-num{
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:60rpx;  
  text-align:right;
}
.leamsg{
  width:540rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(125,125,125,1);
  border-radius:10rpx;  
  padding-left: 30rpx; 
}
.discount{
  justify-content: space-between;
  font-size:30rpx;
  font-weight:normal;
  color:rgba(226,44,71,1);  
  line-height:60rpx;
  border-bottom:8rpx solid #F1F1F1;
  padding:20rpx;
}
.payment{
  position:fixed;
  bottom:0rpx;
  left: 0rpx;
  width: 750rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #FFFFFF;
  border-top: 1rpx solid #eeeeee;
  z-index:999;  
}
.pay-pri{
  display:flex;
  flex-direction:row;
  font-size:36rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:120rpx;  
  text-align: center;
  margin-left: 20rpx;
}
.prices{
  width: 300rpx;
  font-size:40rpx;
  color:#E22C47;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
  text-align:left;
}
.pay-btn{
  width:287rpx;
  height:120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  background:rgba(226,44,71,1);
  border:1px solid rgba(226,44,71,1);
  text-align: center;
}
.ad-tilte{
  width:100rpx;
  height: 80rpx;
  line-height:80rpx;
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  text-align:center;
}
.ad-adress{
  width:560rpx;
  min-height: 40rpx;
  max-height: 80rpx;
  font-size: 30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  text-align: left;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  line-height:40rpx;
}
