.commodity_screen {
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
}
.commodity_attr_box {
  display: flex;
  flex-direction: column;
  /* justify-content: center;
  align-items: center; */
  width: 750rpx;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2000;
  background: #FFFFFF;
  border-radius: 10rpx;
  font-size:30rpx;
  font-weight: 600;
}
.canceltitle{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  margin:18rpx;
  line-height:30rpx;
}
.adresslist{
  width:750rpx;
  height:80%;
  overflow-y:auto;
}
.adress-one{
  width:670rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  color: rgba(226,44,71,1);
  border:1rpx solid rgba(226,44,71,1);
  border-radius:10rpx;
  margin:10rpx 40rpx;  
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.adress-check{
  color: #FFF;
  background: rgba(226,44,71,1);
}
.adresskeep{
  position: absolute;
  width: 750rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #FFF;
  background: rgba(226,44,71,1);
  bottom:0;
  font-size:36rpx;

}
.line{
  width: 750rpx;
  height: 6rpx;
  display:block;
}
