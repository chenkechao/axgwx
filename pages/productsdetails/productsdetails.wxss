/* pages/productsdetails/productsdetails.wxss */
.product-detail{
  width: 710rpx;
  padding: 20rpx;
}
.product-title{
  font-size:36rpx;
  font-weight:600;
  color:rgba(0,0,0,1);
  line-height:60rpx; 
}
.product-ind{
  font-size:26rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:60rpx;
}
.product-price{
  font-size:36rpx;
  font-weight:400;
  color:rgba(226,44,71,1);
  line-height:60rpx;  
}
.product-num{
  display: flex;
  flex-direction: row-reverse;
  font-size:20rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  justify-content: space-between;
  margin-top:10rpx;
}
.product-num-one{
  width: 236rpx;
  text-align: right;
}
.product-spe{
  font-size:26rpx;
  font-weight:400;
  line-height:60rpx;  
}
.product-img{
  display: flex;
  flex-direction: column;
  border-top:20rpx solid #F1F1F1;
}
.product-img image{
  width: 750rpx;
}

.buycheckbox{
  position:fixed;
  bottom:0rpx;
  left: 0rpx;
  width: 750rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  border-top: 1rpx solid #eeeeee;
  z-index:999;
}
.toindex{
  height: 120rpx;
  width: 118rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:24rpx;
  font-weight:400;
  color:#666666;
  position: relative;
}
.index-img{
  width: 60rpx;
  height:60rpx;
}
.shopNum{
  position: absolute;
  top: 8rpx;
  right: 10rpx;
  text-align: center;
  line-height: 40rpx;
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
  border: 1rpx solid red;
  color:red;
  background: #FFF;
}
.cancel-img{
  width: 50rpx;
  height:50rpx;
}
.shopcart-btn{
  height: 120rpx;
  width: 200rpx;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  line-height: 120rpx;
  font-size:36rpx;
  font-weight:400;
  color:#FFFFFF;  
  background-color:#FFB933;  
  text-align:center;
}
.buy-btn{
  height: 120rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-weight:400;
  color:#FFFFFF;  
  background-color: #E22C47;  
}
.commodity_screen {
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.commodity_attr_box {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.title{
  width:710rpx;
  padding:20rpx;
  justify-content: space-between;
}
.buy-img{
  width: 150rpx;
  height: 150rpx;
}
.buy-title{
  font-size:36rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:60rpx;  
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.buy-spe{
  font-size:26rpx;
  color:rgba(102,102,102,1);
  line-height:36rpx;  
}
.buy-price{
  font-size:44rpx;
  font-weight:400;
  color:rgba(226,44,71,1);
  line-height:60rpx;  
}
.buy-num{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size:26rpx;
  line-height:28rpx;
  margin: 0 20rpx;
}
.red-img{
  width: 70rpx;
  height: 70rpx;
}
.numipt{
  width: 110rpx;
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #E22C47;
  background-color: #E4E4E4;
  font-size:50rpx;
}
.remainnum{
  width: 750rpx;
  line-height: 60rpx;
  font-size:26rpx;
  color:rgba(102,102,102,1);
  margin: 0 20rpx;
}
.nextbtn{
  width: 750rpx;
  background: #E22C47;
  text-align: center;
  color: #FFFFFF;
  line-height:100rpx;
}
.contact{
  background-color: #FFF;
  padding: 0;
  margin: 0;
  font-size: inherit;
}
.contact::after{
 border: #FFF solid;
}
