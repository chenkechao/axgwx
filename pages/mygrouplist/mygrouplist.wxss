/* pages/mygrouplist/mygrouplist.wxss */
.activitylist{
  width: 710rpx;
  height: auto;
  padding:20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 8rpx solid #F1F1F1;
}
.activity-title{
  height:60rpx;
  width:100%;
  font-size:36rpx;
  font-weight:600;
  color:rgba(226,44,71,1);
  line-height:35rpx;
  margin-bottom:6rpx; 
  border-bottom: 1rpx solid #E5E5E5;
}
.activity-introduce{
  width:100%;
  font-size:30rpx;
  font-weight:550;
  color:rgba(0,0,0,1);
  margin:10rpx 0;
}
.activity-time{
  width:100%;
  font-size:26rpx;
  color:rgba(102,102,102,1);
  margin:10rpx 0;
}
.activity-imglist{
  display: felx;
  flex-flow: row wrap;
  margin:10rpx 0;
}
.activity-img{
  width:150rpx;
  height: 150rpx; 
  border-radius:10rpx;
  margin: 0 20rpx 20rpx 0;
}
.activity-visitnum{
  font-size:20rpx;
  color:rgba(226,44,71,1);
}
.deleteactivity{
  width:176rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  color: #FFF;
  background:rgba(226,44,71,1);
  border-radius:10rpx;  
  font-weight:400;
  text-align: center;
}
.chooseactivity{
  position: fixed;
  bottom:0;
  left:0;
  width:750rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color:#FFF;
  background: rgba(226,44,71,1);
}
.blank-tip{
  width:750rpx;
  height: 36rpx;
  font-size:24px;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:36px;  
  text-align:center;
}